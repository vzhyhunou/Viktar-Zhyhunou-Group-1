<tiles-definitions>

    <definition name="basic" template="/WEB-INF/pages/basic.jsp">
        <put-attribute name="header" value="/WEB-INF/pages/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/pages/footer.jsp" />
    </definition>

    <definition name="index" extends="basic">
        <put-attribute name="title" value="Home page"/>
        <put-attribute name="body" value="/WEB-INF/pages/index.jsp"/>
    </definition>

    <definition name="customers" extends="basic">
        <put-attribute name="title" value="Customers list"/>
        <put-attribute name="body" value="/WEB-INF/pages/customers.jsp"/>
    </definition>

    <definition name="customer" extends="basic">
        <put-attribute name="title" value="Customer"/>
        <put-attribute name="body" value="/WEB-INF/pages/customer.jsp"/>
    </definition>

